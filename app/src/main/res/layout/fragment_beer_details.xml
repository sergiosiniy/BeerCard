<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_beer_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.sergiosiniy.beeradvicer.fragments.BeerDetailsFragment">

        <TextView
            android:id="@+id/beer_brand_name"
            style="@android:style/TextAppearance.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <ImageView
            android:id="@+id/beer_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Beer image"
            android:scaleType="center" />

        <TextView
            android:id="@+id/beer_brand_description"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

</ScrollView>
